<!-- Image -->
<div class="row">
  <div class="col-md-12 center-block">
    <%= image_tag @location.image(:medium), width: "100%" %>
  </div>
</div>
<br/>

<div class="row">

  <!-- LEFT PANEL -->
  <div class="col-md-8">

    <!-- Listing Name -->
    <div class="row">
      <div class="col-md-8">
        <h1><%= @location.lisiting_name %></h1>
        <%= @location.address %>
      </div>
      </div>
    <hr/>

      <!-- location Info -->
    <div class="row text-babu">
      <div class="row text-center row-space-1">
        <div class="col-md-3">
          <i class="fa fa-home fa-2x"></i>
        </div>
        <div class="col-md-3">
          <i class="fa fa-user-circle-o fa-2x"></i>
        </div>
        <div class="col-md-3">
          <i class="fa fa-bed fa-2x"></i>
        </div>
        <div class="col-md-3">
          <i class="fa fa-bath fa-2x"></i>
        </div>
      </div>



      <div class="row text-center">
        <div class="col-md-3"><%= pluralize(@location.accomodate, "Guest") %></div>
        <div class="col-md-3"><%= pluralize(@location.accomodate, "Guest") %></div>
        <div class="col-md-3"><%= pluralize(@location.accomodate, "Guest") %></div>
        <div class="col-md-3"><%= pluralize(@location.accomodate, "Guest") %></div>
      </div>

     </div>
    <hr/>

     <!-- About -->
    <div class="row">
      <div class="col-md-12">
        <h3>About This Listing</h3>
        <p><%= @location.summary %></p>
      </div>
    </div>
    <hr/>

     <!-- Amenities -->
    <div class="row">
      <div class="col-md-3">
        <h4>Amenities</h4>
      </div>

      <div class="col-md-9">
        <div class="row">
          <div class="col-md-6">
            <ul class="amenities">
              <li class="<%= 'text-line-through' if !@location.is_internet %>">Internet</li>
            </ul>
          </div>

        </div>
      </div>

    </div>
    <hr/>

     <!-- REVIEWS -->
    <div class="row">
      <div class="col-md-12">
        <h3>
         <p><%= pluralize(@reviews.count, 'review') %></p>
          <span id="average_rating"></span>
        </h3>
        <div class="container">
           <div><%= render 'reviews/form' %></div>
            <div><%= render 'reviews/index' %></div>

        </div>
      </div>
    </div>
    <br/>
    <hr/>


<!-- GOOGLE MAP -->
    <div class="row">

      <div id="map" style="width: 100%; height: 400px"></div>

       <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=#{ENV['GOOGLE_API']}=places"></script>
      <script>
          function initialize() {
            var location = {lat: <%= @location.latitude %>, lng: <%= @location.longitude %>};
            var map = new google.maps.Map(document.getElementById('map'), {
              center: location,
              zoom: 14
            });

            var marker = new google.maps.Marker({
              position: location,
              map: map
            });

            var infoWindow = new google.maps.InfoWindow({
              content: '<div id="content"><%= image_tag @location.image(:medium) %></div>'
            });

            infoWindow.open(map, marker);
          }

          google.maps.event.addDomListener(window, 'load', initialize);
      </script>

    </div>
    <hr/>

      <!-- NEAR BY locationS -->
    <div class="row">
      <h3>Near by</h3>
      <% for location in @location.nearbys(1000) %>
          <div class="col-md-4">
            <div class="panel panel-default">
              <div class="panel-heading preview">
                <%= image_tag location.image(:medium) %>
              </div>
              <div class="panel-body">
                <%= link_to location.lisiting_name, location %><br/>
                (<%= location.distance.round(2) %> miles away)
              </div>
            </div>
          </div>
      <% end %>
    </div>

  </div>
  
  <!-- RIGHT PANEL -->
  <div class="col-md-4">
    <!-- Reservation Form -->
    <%= render 'reservations/form' %>
  </div>
</div>


 <script>
  $('#average_rating').raty({
    path: '/assets',
    readOnly: true,
    score: <%= @location.average_rating %>
  });
</script>
<div class="panel panel-default">
  <div class="panel-heading">
     <span><% if @location.Instant? %><i class="fa fa-bolt" style="color: #ffb400"></i> <% end %> $<%= @location.price %></span>
    <span class="pull-right">Per Hour</span>
  </div>
  <div class="panel-body">
 <%= form_for([@location, @location.reservations.new]) do |f| %>
   <div class="row">
      <div class="col-md-6">
          <label>Start Time</label>
              <%= f.text_field :start_time, readonly: true, placeholder: "Start Time", class: "form-control
               timepicker"%>
          </div>
              <div class="col-md-6">
                <label>End Time</label>
              <%= f.text_field :end_time, readonly: true, placeholder: "End Time", class: "form-control timepicker"  %>
              </div>
           </div>

    <h4 class="message-alert text-center"><span id="message"></span></h4>
      <div id="preview" style="display: none">
        <table class="reservation-table">
          <tbody>
            <tr>
              <td>Price</td>
              <td class="text-right">$<%= @location.price %></td>
            </tr>
            <tr>
              <td>Hour(s)</td>
              <td class="text-right">x <span id="reservation_nights"></span></td>
            </tr>
            <tr>
              <td class="total">Total</td>
              <td class="text-right">$<span id="reservation_total"></span></td>
            </tr>
          </tbody>
        </table>
      </div>

      <br/>
      <% if @location.Instant? %>
          <%= f.submit "Book Now", id: "btn_book", class: "btn btn-normal btn-block", disabled: false %>
      <% else %>
          <%= f.submit "Request Now", id: "btn_book", class: "btn btn-normal btn-block", disabled: false %>
      <% end %>
    <% end %>
  </div>
</div>

 <script> 
 $(function() {
  $('#reservation_start_time').timepicker({
    timeFormat: 'h:mm p',
    interval: 60,
    minTime: '10',
    maxTime: '10:00pm',
    defaultTime: '11',
    startTime: '10:00',
    dynamic: true,
    dropdown: true,
    scrollbar: true
  });
  $('#reservation_end_time').timepicker({
    timeFormat: 'h:mm p',
    interval: 60,
    minTime: '10',
    maxTime: '10:00pm',
    defaultTime: '11',
    startTime: '10:00',
    dynamic: true,
    dropdown: true,
    scrollbar: true
   });
  });
 </script>